.bg{
  position: absolute;
  z-index:0;
  height: 300px;
  width:300px;
}
.bg image{
  display: block;
  width: 100%;
  height:100%;
}
.hat{ 
  height: 100px;
  width: 100px;
  position: absolute;
  border: dashed 2px yellow;
  top:100px;
}
.handle,.cancel{
  position: absolute;
  z-index: 1;
  width:20px;
  height:20px;
}
.scrollView{
   width: 100%; 
   height:200rpx;
   background:  #4f4f4f;
   position: fixed;
   bottom: 0;
   left:0;
   white-space: nowrap;
   padding-top:100rpx;
}
.imgList{
  height: 70px;
  width: 70px;
  margin: 5px;
  background: #fff;
  border-radius: 10rpx;
}
.next{
  width:140rpx;
  height:140rpx;
  border-radius: 50%;
  background: #5dcb74;
  position:fixed;
  right: 30rpx;
  bottom: 230rpx;
}
.next::after{
  border: none;
}